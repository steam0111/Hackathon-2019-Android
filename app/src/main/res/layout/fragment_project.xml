<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:id="@+id/ivProject"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:transitionName="secondTransitionName"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView android:id="@+id/tvCompanyName"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="CompanyName"
                  style="@style/TextAppearance.MaterialComponents.Headline6"
                  app:layout_constraintStart_toEndOf="@+id/ivCompanyPicture"
                  android:layout_marginStart="16dp"
                  app:layout_constraintBottom_toBottomOf="@+id/ivCompanyPicture"
                  app:layout_constraintTop_toTopOf="@+id/ivCompanyPicture" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="16dp"/>

        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivCompanyPicture"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:srcCompat="@color/chuck_colorAccent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ivProject"/>

        <TextView android:layout_width="0dp"
                  android:textSize="14sp"
                  android:text="Проект удтвержден : "
                  android:textColor="@color/black"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="@+id/ivCompanyPicture" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:id="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/textView3"
                  android:layout_marginTop="8dp"/>

        <TextView android:layout_width="0dp"
                  android:textSize="14sp"
                  android:textColor="@color/black"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="@+id/ivCompanyPicture" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:id="@+id/textView3"
                  app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/tvName"/>
        <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                app:layout_constraintStart_toStartOf="@+id/ivCompanyPicture"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ivCompanyPicture"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_member_sended_req"
                android:id="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/ivCompanyPicture"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="16dp"
                android:id="@+id/tvCountOrders"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <Button style="@style/BtnBorder"
                android:id="@+id/btnRequest"
                android:visibility="visible"
                android:text="Подать заявку на участие"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4">
        </Button>

        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/colorPrimaryDark"
                  android:text="Стажировка оплачивается"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="@+id/imageView2" android:id="@+id/textView4"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_schedule_black_24dp"
                android:id="@+id/ivStatus"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/btnRequest"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/llskills"
        />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:visibility="gone"
                android:text="Подано заявок на участие :"
                app:layout_constraintTop_toTopOf="@+id/btnRequest"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="16dp"
                android:id="@+id/tvStatus"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="@+id/btnRequest"
        />

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/llskills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:showDivider="beginning|middle"
                app:layout_constraintTop_toBottomOf="@+id/btnRequest"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp">

        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
